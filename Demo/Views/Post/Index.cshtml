@model IList<Demo.Models.Models.Post>
       
<h3>Lista de Posts</h3>    
<div class="row">
    <form method="GET">
        <input type="text" name="buscar" class="form-control col-md-10" placeholder="Buscar título" />
    </form>
</div>
<div>
    <a href="@Url.Action("Create", "Post")">Crear Post</a>
</div>
<div>
    
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Título</th>
                <th>Categoría</th>
                <th>Comentario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    
                    <td>@item.Comments</td>
                    <td>
                        <a href="@Url.Action("Edit", "Post", new{id = item.Id})">Editar</a> |
                        <a href="@Url.Action("Delete", new { Id = item.Id})">Eliminar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    
</div>


