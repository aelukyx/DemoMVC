@model Demo.Models.Post

@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="Title">Título</label>
        @Html.TextBox("Title", Model.Title, new {@class="form-control", placeholder="Ingrese título"})
        @*<input type="text" name="Title" class="form-control" value="@Model.Title"/>*@
    </div>
    <div class="form-group">
        <label for="Comments" class="col-sm-2 control-label">Categoria</label>
        <div class="col-sm-10">
            @Html.DropDownList("CategoryId", new SelectList((List<Demo.Models.Category>)ViewBag.Categorias, "Id", "Name", Model.CategoryId), "[SELECCIONE UNA OPCIÓN]", new{@class="form-control"})
        </div>
    </div>
    <div class="form-group">
        <label for="Comments">Comentario</label>
        @Html.TextAreaFor(o => o.Comments, new {@class = "form-control"})
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    @Html.HiddenFor(o => o.Id)
}